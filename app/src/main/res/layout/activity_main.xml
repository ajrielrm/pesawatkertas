<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


   <ImageView
       android:id="@+id/banner"
       android:layout_marginTop="-5dp"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="420dp"
       android:layout_height="170dp"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:src="@drawable/pesawat"/>

  <TextView
      android:id="@+id/textmain"
      android:layout_marginTop="100sp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/banner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAlignment="center"
      android:textSize="40sp"
      android:lineSpacingExtra="-26sp"
      android:fontFamily="@font/popbold"
      android:textColor="#2DACB2"
      android:text="Ke\nAmerika\nNaik\nPesawat,\nCakep"
      />

    <TextView
        android:id="@+id/textbot"

        android:layout_marginTop="-20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        android:lineSpacingExtra="-26sp"
        android:fontFamily="@font/popbold"
        android:textColor="#FFA513"
        android:text="(Pantun)"
        />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        android:text="Log In"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/button"
        android:backgroundTint="#2DACB2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textbot"
        android:layout_width="196dp"
        android:fontFamily="@font/popbold"
        android:layout_height="48dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register"
        android:text="Register"
        android:layout_marginTop="20dp"
        android:textColor="#2DACB2"
        android:textSize="20dp"
        android:background="@drawable/buttonregis"
        android:backgroundTint="#2DACB2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login"
        android:layout_width="196dp"
        android:fontFamily="@font/popbold"
        android:layout_height="48dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>